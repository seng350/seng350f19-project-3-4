extends layout

block content
  div.container-fluid
    h1 Overview Page
    h3 Welcome #{studentDetails[0].StudentName}
    div.calendar
      if studentDetails[1] && studentDetails[1].length > 0
        table.courses Courses:
          tr
            th Name
            th Grade
        tbody
          each course in studentDetails[1]
            tr 
              td #{course[0].CourseName}
              td #{course[0].CurrentGrade}
        
        table.gradable-items Gradable Items:
          tr
            th Name
            th Due Date
        tbody
          each gradableItem in studentDetails[2]
            tr
              td #{gradableItem[0].GradableItemName}
              td #{gradableItem[0].DueDate}
      else
        h3 You haven't added any courses.