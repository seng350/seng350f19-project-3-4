extends layout

block content
  div.container-fluid
    h1 Admin Page
    h3 Welcome Admin
    div
      h2 Manage user accounts
      div 
        h3 Create a new user
        div
          form(action='/createUser' method="post")
            label(for="name") Name:
            input(type="text" name="name")
            label(for="isadmin") Admin User
            input(type="radio" name="isadmin" value="Admin user")
            input(type="submit", value="Create User")
            
      div 
        h3 Delete a user
        div
          form(action='/deleteUser' method="post")
            label(for='userOpt') Users
            if users.length > 0
              select(name='user')
                each user in users
                  if thisID == user.StudentID
                    option("value"=user disabled) #{user.StudentName}
                  else 
                    option("value"=user) #{user.StudentName}
              input(type='submit', value='Delete')
            else 
              p.dark No users available.
              input(type='submit', disabled, value='Delete')



