doctype html
html
  head
    title= title
    block styles
      link(rel='stylesheet' type='text/css' href='stylesheets/style.css')
  
  body
    header
      nav.navbar
        if studentDetails || thisID
          a.logout.navbar-item(href="/") Logout
          unless thisID
            if studentDetails[0].IsAdmin
              form.navbar-item(action='/admin' method="post")
                input.admin(type='hidden' name='user' value=studentDetails[0].StudentID)
                input.admin(type="submit" value="Manage Users")
    
    block content
